#!/usr/bin/env node

'use strict'

const {
  currentBranch,
  lastVersionChange,
  lastMergeHash,
} = require('../index.js')

if (currentBranch() === 'master') {
  console.log('This is master, skipping.')
  process.exit(0)
}

if (! lastVersionChange()) {
  console.log(`assert-version-bump: no version bump since ${lastMergeHash()}`)
  process.exit(1)
} else {
  process.exit(0)
}
